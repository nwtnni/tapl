WHITESPACE = _{ " \n\r\t" }

Program = _{ SOI ~ Exp ~ EOI }

Exp = _{
      Zero
    | True
    | False
    | Cond
    | Succ
    | Pred
    | IsZero
}

Zero = { "0" }
True = { "true" }
False = { "false" }
Cond = { "if" ~ Exp ~ "then" ~ Exp ~ "else" ~ Exp }
Succ = { "succ" ~ Exp }
Pred = { "pred" ~ Exp }
IsZero = { "iszero" ~ Exp }
